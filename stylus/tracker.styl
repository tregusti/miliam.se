#tracker-form
  text-align: center

  button
    border-radius: 10px
    border: 3px solid textcolor
    width: 100px
    padding: 10px
    background: silver
  #track-on
    border-right: none
    border-radius: right 0
    &.selected
      background: green
  #track-off
    border-left: none
    border-radius: left 0
    &.selected
      background: red