#head
  color: white
  padding: allpadding
  overflow: hidden
  margin: 10px

  a
    color: inherit
    text-decoration: none

  h1
    text-shadow: 1px 2px 0 rgba(0, 0, 0, .2)
    font-size: 40px
    letter-spacing: -1px
    font-family: headline
  h2
    smallwhitetext()
    float: right
    margin-top: -10px

    @media wide
      margin: 0 0 0 10px
      float: none

  @media wide
    h1, h2
      display: inline-block