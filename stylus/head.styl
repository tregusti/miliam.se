#head
  color: white
  padding: allpadding
  overflow: hidden
  margin: 10px

  a
    color: inherit
    text-decoration: none

  h1
    text-shadow: 1px 2px 0 rgba(0, 0, 0, .2)
    font-size: 40px
    letter-spacing: -1px
    font-family: headline
  h2
    float: right
    smallwhitetext()
    margin-top: -10px



@media screen and (min-width: 660px) // normal-width TODO!
  #head
    h1, h2
      float: none
      display: inline-block
    h2
      margin-left: 10px