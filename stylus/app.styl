@import url('/ubuntu/stylesheet.css')

@import 'reset'


headline = UbuntuRegular, Arial, Helvetica
padding = 8px
allpadding = 3px padding
textcolor = #444
brown = rgb(195, 134, 113)
green = rgb(172, 230, 0)

narrowWidth = 320px
normalWidth = 664px

narrow = "screen and (max-width: " + (normalWidth + 9) + ")"
wide   = "screen and (min-width: " + (normalWidth + 10) + ")"

smalltext()
  font-size: 12px
  line-height: 1.4
  font-family: helvetica, arial

smallwhitetext()
  smalltext()
  color: white
  text-shadow: 1px 1px 0 rgba(0, 0, 0, .2)

link(color, underlined=false)
  color: color
  text-decoration: none
  if underlined
    border-bottom: 1px solid green

  &:hover
  &:active
  &:focus
    if underlined
      border-bottom: 3px double green
    else
      border-bottom: 1px solid green


body
  font: 15px/1.4 Georgia
  width: 320px
  margin: auto
  color: textcolor
  background: url('/bg.jpg') fixed
  @media wide
    width: normalWidth

@import 'navigation'
@import 'head'
@import 'content'

#footer
  margin: 10px 0
  width: narrowWidth
  smallwhitetext()

  aside
    padding: padding

#fb-root
  display: none
  // This is only used as a placeholder, not for showing anything, so hide it.
  // http://stackoverflow.com/questions/8856211/horizontal-scrollbar-in-firefox-caused-by-fb-root