@import url('/ubuntu/stylesheet.css')

@import 'reset'


headline = UbuntuRegular, Arial, Helvetica
padding = 3px 8px
brown = rgb(195, 134, 113)
green = rgb(172, 230, 0)

smalltext()
  font-size: 12px
  line-height: 1.4
  font-family: helvetica, arial

smallwhitetext()
  smalltext()
  text-shadow: 1px 1px 0 rgba(0, 0, 0, .2)

body
  font: 15px/1.4 Georgia
  width: 320px
  margin: auto

  &:after
    content: ''
    position: fixed
    top: 0
    left: 0
    right: 0
    height: 1500px
    background: url('/bg.jpg') fixed
    z-index: -1

#head
  color: white
  padding: padding
  overflow: hidden
  border-bottom: 5px solid green

  a
    color: inherit
    text-decoration: none

  h1
    text-shadow: 1px 2px 0 rgba(0, 0, 0, .2)
    font-size: 40px
    letter-spacing: -1px
    font-family: headline
  h2
    float: right
    smallwhitetext()
    margin: -10px 0 10px 0


#content
  margin-bottom: 10px
  border-bottom: 5px solid green

  article
    radius = 10px
    padding: padding
    background: rgba(255, 255, 255, .6)
    margin-top: 30px
    &:first-child
      margin-top: 0

    header
      margin: 5px 0
      border-bottom: 1px solid rgba(green, .5)

      a
        color: inherit
        text-decoration: none
      h1
        font: 20px/1.4 headline
        margin-bottom: -6px
        text-shadow: 1px 1px 0 rgba(0, 0, 0, .2)

    img
      width: 320px
      margin: 5px -8px 0 -8px
      box-shadow: 0 0 5px rgba(0, 0, 0, .6)

    time
      text-align: right
      display: block
      smalltext()

    section
      padding: 10px 0
      text-align: justify

#footer
  padding: padding
  margin-bottom: 10px
  color: white
  smallwhitetext()