@import url('/ubuntu/stylesheet.css')

@import 'reset'


headline = UbuntuRegular, Arial, Helvetica
padding = 8px
allpadding = 3px padding
textcolor = #444
brown = rgb(195, 134, 113)
green = rgb(172, 230, 0)

smalltext()
  font-size: 12px
  line-height: 1.4
  font-family: helvetica, arial

smallwhitetext()
  smalltext()
  color: white
  text-shadow: 1px 1px 0 rgba(0, 0, 0, .2)

body
  font: 15px/1.4 Georgia
  width: 320px
  margin: auto
  color: textcolor
  background: url('/bg.jpg') fixed

  &:before
    content: ''
    background: rgba(255, 255, 255, .6)
    border-bottom: 5px solid green
    height: 15px
    width: 320px
    display: block

#head
  color: white
  padding: allpadding
  overflow: hidden
  margin: 10px

  a
    color: inherit
    text-decoration: none

  h1
    text-shadow: 1px 2px 0 rgba(0, 0, 0, .2)
    font-size: 40px
    letter-spacing: -1px
    font-family: headline
  h2
    float: right
    smallwhitetext()
    margin-top: -10px


#content
  margin: 0 3px 10px 3px

  article
    padding: allpadding
    background: rgba(255, 255, 255, .6)
    margin-top: 30px
    border-radius: 10px
    &:first-child
      margin-top: 0

    header
      margin: 5px 0
      border-bottom: 2px solid rgba(green, .5)

      a
        text-decoration: none
      h1
        color: darken(textcolor, 20%)
        font: 20px/1.4 headline
        margin-bottom: -6px
        text-shadow: 1px 1px 0 rgba(0, 0, 0, .2)

    img
      width: 320px
      margin: 10px -11px 0 -11px
      box-shadow: 0 0 5px rgba(0, 0, 0, .6)

    time
      text-align: right
      display: block
      smalltext()

    section
      padding: 10px 0
      text-align: justify

      a
        color: black
        text-decoration: none
        border-bottom: 1px solid green

        &:hover
        &:active
        &:focus
          border-bottom: 3px double green

#footer
  margin: 10px 0
  width: 320px
  smallwhitetext()

  aside
    padding: padding