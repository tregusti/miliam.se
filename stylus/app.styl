@import url('/ubuntu/stylesheet.css')

@import 'reset'


headline = UbuntuRegular, Arial, Helvetica
padding = 3px 8px
brown = rgb(195, 134, 113)
green = rgb(172, 230, 0)

body
  font: 15px/1.4 Georgia
  width: 320px
  margin: auto

  &:after
    content: ''
    position: fixed
    top: 0
    left: 0
    right: 0
    height: 1500px
    background: url('/bg.jpg') fixed
    z-index: -1

#head
  color: white
  padding: padding
  overflow: hidden
  border-bottom: 5px solid green

  h1
    text-shadow: 1px 2px 0 rgba(0, 0, 0, .2)
    font-size: 40px
    letter-spacing: -1px
    font-family: headline
  h2
    float: right
    font-size: 14px
    margin-top: -10px
    text-shadow: 1px 1px 0 rgba(0, 0, 0, .2)


#content
  padding: padding
  margin-bottom: 20px
  background: rgba(255, 255, 255, .6)

  article
    header
      margin: 5px 0
      border-bottom: 1px solid rgba(green, .5)

      h1
        font: 20px/1.4 headline
        margin-bottom: -6px
        text-shadow: 1px 1px 0 rgba(0, 0, 0, .2)

    img
      width: 320px
      margin: 5px -8px 0 -8px
      box-shadow: 0 0 5px rgba(0, 0, 0, .6)

    time
      text-align: right
      font-size: 11px
      font-family: helvetica, arial
      display: block

    section
      padding-top: 10px
      text-align: justify

#footer
  position: fixed
  right: 0
  left: 0
  bottom: 0
  border-bottom: 5px solid green