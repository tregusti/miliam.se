extends layout

block content
  each entry in entries
    article
      header
        a(href=data2www(entry.basepath))
          h1= entry.title
      each image in entry.images
        img(src=data2www(image.w320), alt=entry.title)
      footer
        time(pubdate)
          = entry.humanDate
          = " "
          = entry.humanTime
      section.body
        != entry.html